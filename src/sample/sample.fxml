<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <Pane fx:id="board" layoutX="0" layoutY="0">
        <Rectangle fx:id="red" arcHeight="5.0" disable="true" fill="RED" height="125.0" onMouseClicked="#redClicked"
                   stroke="BLACK" strokeType="INSIDE" width="125.0"/>
        <Rectangle fx:id="blue" arcHeight="5.0" disable="true" fill="BLUE" height="125.0" layoutX="125.0"
                   onMouseClicked="#blueClicked" stroke="BLACK" strokeType="INSIDE" width="125.0"/>
        <Rectangle fx:id="green" arcHeight="5.0" disable="true" fill="GREEN" height="125.0" layoutY="125.0"
                   onMouseClicked="#greenClicked" stroke="BLACK" strokeType="INSIDE" width="125.0"/>
        <Rectangle fx:id="yellow" arcHeight="5.0" disable="true" fill="YELLOW" height="125.0" layoutX="125.0" layoutY="125.0"
                   onMouseClicked="#yellowClicked" stroke="BLACK" strokeType="INSIDE" width="125.0"/>
        <Label fx:id="score" contentDisplay="CENTER" layoutX="2.0" layoutY="0.0" text="Score: " textAlignment="CENTER"></Label>
        <Button fx:id="start" layoutX="78.0" layoutY="112.0" mnemonicParsing="false" onAction="#startGame" text="Start Game"/>
    </Pane>


</Pane>
